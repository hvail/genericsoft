FROM tomcat:8.5.9

RUN ls -aF /usr/local/tomcat

RUN echo 'download new server.xml'
RUN wget http://global-conf.oss-cn-shenzhen.aliyuncs.com/tomcat/server.xml

RUN ls -aF
RUN ls -aF conf

# RUN rm /usr/local/tomcat/conf/server.xml
RUN cp -f server.xml /usr/local/tomcat/conf/server.xml

RUN echo 'stop tomcat'
# RUN sh /usr/local/tomcat/bin/shutdown.sh

RUN echo 'start tomcat'
# RUN sh /usr/local/tomcat/bin/startup.sh

CMD ["/bin/bash","-C"]